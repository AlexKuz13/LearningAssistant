<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Style Toolbar-->
    <style name="mainToolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/toolbarBackground</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <!--Style TextView Nav Menu Header-->
    <style name="text_nav_menu_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style Text in Nav Menu -->
    <style name="text_nav_menu">
        <item name="itemIconTint">@color/purple_700</item>
        <item name="itemTextColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="itemIconSize">30dp</item>
    </style>

    <!-- Layout Settings and buttons -->
    <style name="settings_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:backgroundTint">@color/backgroundColor</item>
    </style>


    <!-- Layout Clickable false Settings and buttons -->
    <style name="settings_not_click_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
    </style>

    <!-- Text in Layouts Settings -->
    <style name="text_settings_layouts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <!-- Signature in Layouts Settings -->
    <style name="settings_text_layouts_signature">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/descriptionColor</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <!-- Line separator -->
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
    </style>

    <!-- Action menu in SettingsFragment -->
    <style name="action_menu" parent="Theme.AppCompat.Light">
        <item name="background">@color/white</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <!-- Rating Bar User-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/purple_200</item>
        <item name="colorControlActivated">@color/ratingColor</item>
    </style>

    <!-- Text input layout in Enter and Register fragments -->
    <style name="text_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:textColorHint">@color/purple_700</item>
    </style>


    <!-- RadioButtons Language in Language Bottom Sheet -->
    <style name="LanguageRBStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/normal_margin</item>
        <item name="android:paddingEnd">@dimen/normal_margin</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <!-- Change Dark Mode -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>